{% extends "inadmin/structure/main.html.twig" %}

{% block pagetitle %}
    <span>Series</span>
{% endblock pagetitle %}

{% block content %}

    {% block series_list_pre %}{% endblock series_list_pre %}

    {% block series_list %}
        <div class="col span_8_of_8 widget-posts">
            <a class="button button--positive" href="{{ path('app_series_new') }}"><span class="material-icons">add</span> Create Series</a>
        {% include 'inadmin/partials/list.html.twig' with {
                'className': 'form__series',
                'type': 'series',

                'offset': page.offset,
                'limit': page.limit,
                'total': dataset.count,

                'snippet_description': 'description',
                'slug_prefix': 'series/edit',
                'slug': 'id',

                'url_add': path('app_series_new'),
                'url_result': path('app_series_list'),

                'filters': [],
                'filter_values': filters,
                'show_search': true,
                'zebra': true,

                'actions': {
                    'private': {
                        'button_class': 'button--secondary button--privacy',
                        'data': {
                            'form-action': ''
                        },
                        'icon': 'visibility_off',
                        'title': 'Make private',
                    },
                    'public': {
                        'button_class': 'button--secondary button--privacy',
                        'data': {
                            'form-action': ''
                        },
                        'icon': 'visibility',
                        'title': 'Make public',
                    },
                    'delete': {
                        'button_class': 'button--negative button--delete',
                        'icon': 'delete_forever',
                        'title': 'Delete',
                    },
                },

                'badges': {
                    'private': {
                        'field': 'visibility',
                        'condition': false,
                        'className': 'badge__private'
                    },
                }
            }
        %}
        </div>
    {% endblock series_list %}


    {% block series_list_post %}{% endblock series_list_post %}
{% endblock content %}
