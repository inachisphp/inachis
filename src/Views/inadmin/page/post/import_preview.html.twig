{% extends "inadmin/structure/main.html.twig" %}

{% block pagetitle %}
    <a href="{{ path('incc_post_list', { type: 'post' }) }}">Posts</a>
    <a href="{{ path('incc_post_import') }}">Import</a>
    <span>Preview</span>
{% endblock pagetitle %}

{% block content %}
<div class="col-12 widget-posts">
<section class="paginated-list">
    <p>{{ pages|length }} pages detected in file.</p>

    <form class="form nested-grid" method="post" action="{{ path('incc_post_process') }}">
        <table class="table table--responsive table--striped table--compact col-6">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Categories</th>
                    <th>Tags</th>
                    <th>Post Date</th>
                </tr>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td>{{ page.title }}</td>
                    <td>{{ page.type }}</td>
                    <td>
                        <span class="badge baadge--{{ page.status }}">{{ page.status|capitalize }}</span>
                    </td>
                    <td>{{ page.categories|map(c => c.path)|join(', ') }}</td>
                    <td>{{ page.tags|map(t => t.title)|join(', ') }}</td>
                    <td>{{ page.postDate ? page.postDate|date('Y-m-d H:i') : '' }}</td>
                </tr>

                {% if warnings[loop.index0] is defined %}
                <tr class="import-warning-row">
                    <td colspan="6">
                        <ul class="import-warnings">
                            {% for warning in warnings[loop.index0] %}
                                <li>{{ warning }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>

        <fieldset class="col-6">
            <legend>Options</legend>
            <p>Select options for importing the pages:</p>
            <p>
                <label>
                    <input type="checkbox" class="checkbox"name="createMissingCategories" value="1" checked>
                    Create missing categories
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="checkbox" name="createMissingTags" value="1" checked>
                    Create missing tags
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="checkbox" name="overridePostDates" value="1" checked>
                    Override post dates
                </label>
            </p>
        </fieldset>

        <button class="button button--positive" type="submit">Import</button>
    </form>
</section>
</div>
{% endblock content %}
