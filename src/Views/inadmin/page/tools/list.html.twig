{% extends "/inadmin/structure/main.html.twig" %}
{% block pagetitle %}
    <span>Tools</span>
{% endblock pagetitle %}

{% block content %}
{% block settings_pre %}{% endblock settings_pre %}
{% block settings %}
<div class="col-12 widget-container">

<section class="widget widget-settings">
    <p><span class="material-icons" aria-hidden="true">dns</span></p>
    <h2>System Status</h2>
    <p><span>Check your current server and application settings.</span></p>
    <p><a href="{{ settings.domain ~ path('incc_tools_diagnostics') }}" class="button button--secondary">Review System Status</a></p>
</section>

<section class="widget widget-settings">
    <p><span class="material-icons" aria-hidden="true">email</span></p>
    <h2>Email DNS Status</h2>
    <p><span>Check your email DNS configuration for DKIM/DMARC/SPF settings.</span></p>
    <p><a href="{{ settings.domain ~ path('incc_tools_email') }}" class="button button--secondary">Review Email DNS</a></p>
</section>

<section class="widget widget-settings">
    <p><span class="material-icons" aria-hidden="true">import_export</span></p>
    <h2>Import / Export</h2>
    <p><span>Import or export your site data.</span></p>
    <p><a href="{{ settings.domain ~ '' }}" class="button button--secondary">Import / Export</a></p>
</section>

