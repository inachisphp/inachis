    <p><span class="material-icons" aria-hidden="true">backup</span></p>
    <h2>Backup / Restore</h2>
    <p><span>Backup your site and restore from a backup.</span></p>
    <p><a href="{{ settings.domain }}" class="button button--secondary">Backup / Restore</a></p>
</section>

<section class="widget widget-settings">
    <p><span class="material-icons" aria-hidden="true">construction</span></p>
    <h2>Maintenance Mode</h2>
    <p><span>Put your site in maintenance mode.</span></p>
    <p><a href="{{ settings.domain }}" class="button button--secondary">Maintenance Mode</a></p>
</section -->

<section class="widget widget-settings widget-settings--danger">
    <p><span class="material-icons" aria-hidden="true">delete_forever</span></p>
    <h2>Data Purge</h2>
    <p><span><strong>Danger:</strong> Delete all content from your site.</span></p>
    <p><a href="{{ settings.domain }}" class="button button--negative">Purge Data</a></p>
</section>

</div>
{% endblock settings %}
{% block settings_post %}{% endblock settings_post %}
{% endblock content %}

