{% extends "inadmin/partials/form_account.html.twig" %}
{% set page_type = 'login' %}
{% set page_title = 'Reset your password for' %}

{% block form_account %}
    {{- form_errors(form) -}}

    {{ form_row(form.username) }}
    <div>
        {{ form_label(form.new_password) }}
        {{ form_widget(form.new_password) }}
        <meter class="password-strength" data-source="#change_password_new_password" high="3" low="2" max="5" min="0" optimum="4" value="0"></meter>
        {{ form_errors(form.new_password) }}
    </div>

    <div>
        {{ form_widget(form.resetPassword) }}
        <a href="{{ path('app_account_login') }}" title="Cancel your request to reset your password">
            {% trans %}admin.button.cancel{% endtrans %}</a>
    </div>

    {{ form_row(form._token) }}

    <script>window.Inachis.PasswordManager._init();</script>
{% endblock form_account %}