{% extends "inadmin/structure/main.html.twig" %}
{% block content %}

    <div class="col span_2_of_8"></div>
    <div class="col span_4_of_8 container__login">

        {% block form_login_pre %}
            {% for message in app.flashes('success') %}
                <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}
        {% endblock form_login_pre %}
        {% block form_login %}
            <h1>{{ settings.siteTitle }}</h1>
            <img alt="An image of an Inachis io butterfly" class="admin__form__brand" src="/assets/imgs/incc/inachis.png" />

            {{ form_start(form, {attr: {class: 'form form__login', autocomplete: false}}) }}
            {% if error %}
                <div class="flash-notice">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% elseif expired %}
                <div class="flash-notice">Your session has expired.</div>
            {% endif %}
            {{ form_widget(form) }}
            {{ form_end(form) }}

            <p><a href="{{ path('app_account_forgotpassword') }}" title=""><span>{% trans %}Forgot your password?{% endtrans %}</span></a></p>
        {% endblock form_login %}
        {% block form_login_post %}{% endblock form_login_post %}

    </div>
    <div class="col span_2_of_8"></div>

{% endblock content %}