<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ settings.language|default('en') }}" lang="{{ settings.language|default('en') }}" dir="{{ settings.textDirection|default('ltr') }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{{ page.title }}{% if page.title != '' and settings.siteTitle != '' %} / {% endif %}{{ settings.siteTitle }}</title>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <meta name="robots" content="noindex,nofollow" />
    <meta name="description" content="{{ settings.siteTitle }} inachis control panel" />
    <link rel="apple-touch-icon" sizes="180x180" href="{{ settings.domain }}/assets/imgs/incc/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ settings.domain }}/assets/imgs/incc/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ settings.domain }}/assets/imgs/incc/favicon-16x16.png">
    <link rel="manifest" href="{{ settings.domain }}/assets/imgs/incc/site.webmanifest">
    <link rel="mask-icon" href="{{ settings.domain }}/assets/imgs/incc/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" type="image/x-icon" href="{{ settings.domain }}/assets/imgs/incc/favicon.ico">
    <meta name="msapplication-TileColor" content="#2b5797">
    <meta name="msapplication-config" content="{{ settings.domain }}/assets/imgs/incc/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    {% include "inadmin/structure/metadata.html.twig" %}
    {% include "inadmin/structure/stylesheets.html.twig" %}
    {% include "inadmin/structure/javascript__top.html.twig" %}
</head>
<body{% if page_type|default('default') != 'default' %} class="type_{{ page_type }}"{% endif %}>

{%- if is_granted('ROLE_USER') %}
    <header class="admin__header">
        <h1>{% block pagetitle %}{% endblock pagetitle %}</h1>
        <div class="admin__actions">
        <section class="admin__user">
            <a href="#admin__user__options">
                {% if session.avatar is not empty %}
                <img alt="{% trans %}admin.actions.avatar{% endtrans %}" height="40" src="{{ session.avatar.filename }}" width="40" />
                {% else %}
                <span data-color="{{ session.color }}" data-initials="{{ session.initials }}"></span>
                {% endif %}
                {%- if notifications|length > 0 %}<span class="admin__user__notifications">{{ notifications|length }}</span>{% endif %}
            </a>
            <ul id="admin__user__options">
                <li><p><strong>Welcome,</strong> {{ session.displayName }}</p></li>
                <li><a href="{{ path('app_admin_adminprofile_admindetails', {'id': session.username }) }}" title="Edit profile for {{ session.displayName }}">Edit your profile <span class="material-icons">perm_identity</span></a></li>
                <li><a href="#" title="Change your appearance settings">Appearance <span class="material-icons">brush</span></a></li>
                <!-- li><a href="/incc/settings/releases">Update available <span class="material-icons">new_releases</span></a></li -->
                <li><form action="{{ path('app_logout') }}" method="post"><button>Log out <span class="material-icons">logout</span></button></form></li>
            </ul>
        </section>
        <section class="admin__search">
            <form action="{{ path('app_zzpage_getpostlistadmin', {'type': 'post'}) }}" method="post">
                <label for="q" class="material-icons">{% trans %}admin.search.label{% endtrans %}</label>
                <input id="q" name="filter[keyword]" placeholder="{% trans %}admin.search.placeholder{% endtrans %}" type="search" />
                <button class="clear-search material-icons" data-target="#q" type="button">cancel</button>
            </form>
        </section>
        </div>
    </header>
{% endif %}

<section class="admin__body-container">
    {% block form_login_pre %}
        {% if 'Content saved.' in app.session.flashbag.peek('success') %}
            {{ app.session.set('clearAutosave', true) }}
        {% endif %}
        {% if page_type|default(null) is null or page_type != 'login' %}
            {% include "inadmin/partials/flashes.html.twig" %}
        {% endif %}
    {% endblock form_login_pre %}

    {% block content %}{% endblock content %}
</section>

{% if is_granted('ROLE_USER') %}
    <section class="admin__container admin__container--collapsed">
        <section class="admin__identity">
            <h2><span>Inachis</span></h2>
        </section>
        <section class="admin__nav-main">
            <p class="admin__nav-main__link mobile-only"><a href="#admin__nav-list"><span>{% trans %}admin.menu.title{% endtrans %}</span></a></p>
            <ul class="admin__nav-main__list">
                <li>
                    <a class="button admin__add-content" href="#new" title="{% trans %}admin.menu.add.content.help{% endtrans %}"><i class="material-icons">edit</i><span> {% trans %}admin.menu.add.content.title{% endtrans %}</span></a>
                    <ul class="admin__nav-new contextual-menu">
                        <li><a href="{{ settings.domain ~ path('app_zzpage_getpostadmin', { type: 'post'}) }}/post/new" title="{% trans %}admin.menu.add.post.help{% endtrans %}"><i class="material-icons">short_text</i><span> {% trans %}admin.menu.add.post.title{% endtrans %}</span></a></li>
                        <li><a href="{{ settings.domain ~ path('app_zzpage_getpostadmin', { type: 'page'}) }}/new" title="{% trans %}admin.menu.add.page.help{% endtrans %}"><i class="material-icons">content_copy</i><span> {% trans %}admin.menu.add.page.title{% endtrans %}</span></a></li>
                    </ul>
                </li>
                <li class="{{ page.tab|activeMenu('dashboard') }}"><a href="{{ settings.domain ~ path('app_dashboard_default') }}" title="{% trans %}admin.dashboard.help{% endtrans %}"><i class="material-icons">home</i><span> {% trans %}admin.dashboard.title{% endtrans %}</span></a></li>
                <li class="{{ page.tab|activeMenu('post') }}"><a href="{{ settings.domain ~ path('app_zzpage_getpostlistadmin', {'type': 'post'}) }}" title="{% trans %}admin.posts.help{% endtrans %}"><i class="material-icons">library_books</i><span> {% trans %}admin.posts.title{% endtrans %}</span></a></li>
                <li class="{{ page.tab|activeMenu('series') }}"><a href="{{ settings.domain ~ path('app_series_list') }}" title="{% trans %}admin.series.help{% endtrans %}"><i class="material-icons">chrome_reader_mode</i><span> {% trans %}admin.series.title{% endtrans %}</span></a></li>
                <li class="{{ page.tab|activeMenu('Image') }}"><a href="{{ settings.domain ~ path('app_resource_resourceslist', { type: 'images' }) }}" title="{% trans %}admin.resources.help{% endtrans %}"><i class="material-icons">wallpaper</i><span> {% trans %}admin.resources.title{% endtrans %}</span></a></li>
                <li>
                    <a href="#admin__nav-settings" title="{% trans %}admin.menu.more.help{% endtrans %}"><i class="material-icons">more_horiz</i><span> {% trans %}admin.menu.more.title{% endtrans %}</span></a>
                    <ul id="admin__nav-settings">
                        <li class="{{ page.tab|activeMenu('url') }}"><a href="{{ settings.domain ~ path('app_url_list') }}" title="{% trans %}admin.urls.help{% endtrans %}">
                                <i class="material-icons">insert_link</i><span> {% trans %}admin.urls.title{% endtrans %}</span></a>
                        </li>
                        <li class="{{ page.tab|activeMenu('users') }}"><a href="{{ settings.domain ~ path('app_admin_adminprofile_adminlist') }}" title="{% trans %}admin.users.help{% endtrans %}">
                                <i class="material-icons">people</i><span> {% trans %}admin.user.title{% endtrans %}</span></a>
{#                        </li>#}
{#                        <li class="{{ page.tab|activeMenu('tools') }}"><a href="{{ settings.domain ~ path('app_tools_index') }}" title="Tools">#}
{#                                <i class="material-icons">build</i><span> Tools</span></a>#}
{#                        </li>#}
{#                        <li class="{{ page.tab|activeMenu('settings') }}"><a href="{{ settings.domain ~ path('app_settings_index') }}" title="Change advanced settings">#}
{#                                <i class="material-icons">settings</i><span> Settings</span></a>#}
{#                        </li>#}
{#                        <li><a href="{{ settings.domain ~ path('app_waste_list') }}" title="Manage deleted content">#}
{#                                <i class="material-icons">delete</i><span> Bin</span></a>#}
{#                        </li>#}
                    </ul>
                </li>
                <li class="admin__view-site"><a href="/"><i class="material-icons">exit_to_app</i><span> {% trans %}admin.menu.view_site{% endtrans %}</span></a></li>

                <li class="admin__nav-expand"><a href="#expand"><i class="material-icons">keyboard_arrow_right</i><span> {% trans %}admin.menu.expand{% endtrans %}</span></a></li>
                <li class="admin__nav-collapse"><a href="#collapse"><i class="material-icons">keyboard_arrow_left</i><span> {% trans %}admin.menu.collapse{% endtrans %}</span></a></li>
            </ul>
        </section>
    </section>
{% endif %}

{% include "inadmin/structure/javascript__bottom.html.twig" %}
</body>
</html>
