{% extends "inadmin/partials/form_account.html.twig" %}
{% set page_type = 'login' %}
{% set page_title = 'Reset your password for' %}

{% block form_account %}
    {{- form_errors(form) -}}

    {% if app.request.server.get('RECAPTCHA3_KEY')|default('') is not empty %}
        {{ form_errors(form.captcha) }}
        {{ form_widget(form.captcha) }}
    {% endif %}

    <p>{% trans %}admin.reset.enter_email_address{% endtrans %}</p>

    {{ form_label(form.forgot_email) }}
    {{ form_errors(form.forgot_email) }}
    {{ form_widget(form.forgot_email) }}

    <div>
        {{ form_widget(form.resetPassword) }}
        <a href="{{ path('app_account_login') }}" title="Cancel your request to reset your password">
            {% trans %}admin.button.cancel{% endtrans %}</a>
    </div>

    {{ form_row(form._token) }}
{% endblock form_account %}