{% extends "inadmin/structure/main.html.twig" %}
{% block content %}

    {% block resources_pre %}{% endblock resources_pre %}

    {% block resources %}
    <div class="col span_8_of_8 widget-posts ui-tabs-external">
        <ul class="ui-tabs-nav ui-corner-all ui-helper-reset ui-helper-clearfix ui-widget-header">
            <li role="tab" class="ui-tabs-tab ui-corner-top ui-state-default ui-tab ui-tabs-active{% if page.tab == 'Image' %} ui-state-active{% endif %}">
                <a href="{{ settings.domain }}">Images</a>
            </li>
            <li role="tab" class="ui-tabs-tab ui-corner-top ui-state-default ui-tab ui-tabs-active{% if page.tab == 'Download' %} ui-state-active{% endif %}">
                <a href="{{ settings.domain }}">Downloads</a>
            </li>
        </ul>

        <p>
            <a class="button button--positive" href="#"><span class="material-icons">cloud_upload</span> Upload Image</a>
        </p>

        {% include 'inadmin/partials/list.html.twig' with {
            'className': 'form__' ~ page.tab|lower,
            'type': page.tab,
            'dataset': dataset,

            'offset': page.offset,
            'limit': page.limit,
            'total': dataset.count,

            'snippet_description': 'content',

            'url_result': path('app_zzpage_getpostlistadmin'),

            'actions': {
                'delete': {
                    'button_class': 'button--negative button--delete',
                    'data': {
                        'form-action': ''
                    },
                    'icon': 'delete_forever',
                    'title': 'Delete',
                }
            },

            'show_search': true,
            'zebra': true,
        }
        %}
    </div>
    {% endblock resources %}

    {% block resources_post %}{% endblock resources_post %}
{% endblock content %}