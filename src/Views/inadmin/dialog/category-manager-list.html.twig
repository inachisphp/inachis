{% if categories is not empty  %}
    {% for category in categories %}
        <li data-value="{{ category.id }}">
            <span>
                <label for="dialog__categoryManager__existing-{{ category.id }}">
                <input class="checkbox visually-hidden" id="dialog__categoryManager__existing-{{ category.id }}" name="catParent[]" type="radio" value="{{ category.id }}" />
                 {{ category.title }}</label>
                <a data-id="{{ category.id }}"
                   data-title="{{ category.title }}"
                   data-description="{{ category.description }}"
                   data-parent-id="{{ category.parent.id|default('-1') }}"
                   data-visible="{{ category.visible }}"
                   title="Edit category '{{ category.title }}'"><span class="material-icons" aria-hidden="true">edit</span> Edit</a>
            </span>
            {%-  if category.children is not empty %}
                <ol>
                    {{ include("inadmin/dialog/category-manager-list.html.twig", { 'categories': category.children }) }}
                </ol>
            {% endif -%}
        </li>
    {% endfor %}
{% endif %}
