{% extends "inadmin/partials/form_account.html.twig" %}
{% set page_type = 'login' %}
{% set page_title = 'Password reset email sent' %}


{% block form_account %}
    <section class="reset-confirm">
        <h2>Thank you,</h2>
        <p>If your account was found, you will soon receive an email to the email address you provided with instructions to reset your password.</p>
        <p><a class="button button--positive" href="{{ path('app_account_login') }}">Continue</a></p>
    </section>
{% endblock form_account %}
