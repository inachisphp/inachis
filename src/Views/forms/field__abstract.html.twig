{% if component.type in [
'email', 'password', 'search', 'text', 'url',
'date', 'datetime', 'datetime-local', 'month', 'number', 'range', 'time',
'hidden',
'file'
] %}
    {{ include('forms/field__text.html.twig', { 'field':component, value: attribute(data, component.name)|default('') }) }}
{% elseif component.type == 'select' %}
    {{ include('forms/field__select.html.twig', { 'field':component, 'options':component.options, value: attribute(data, component.name)|default('') }) }}
{% elseif component.type in [ 'button', 'submit' ] %}
    {{ include('forms/field__button.html.twig', { 'field':component, value: attribute(data, component.name)|default('') }) }}
{% elseif component.type in [ 'checkbox', 'radio' ] %}
    {{ include('forms/field__choice.html.twig', { 'field':component, value: attribute(data, component.name)|default('') }) }}
{% elseif component.type == 'textarea' %}
    {{ include('forms/field__textarea.html.twig', { 'field':component, value: attribute(data, component.name)|default('') }) }}
{% elseif component.type == 'fieldset' %}
    {{ include('forms/field__fieldset.html.twig') }}
{% endif %}