<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ settings.siteTitle }}</title>
    <link rel="stylesheet" href="/assets/css/styles.min.css">
    {% include 'web/structure/metadata.html.twig' %}
</head>
<body class="{{ pageClass|default('') }} {% if showReadProgress|default(false) %}progress-enabled{% endif %}">
<a href="#main-content" class="skip-link">Skip to content</a>

{% if showReadProgress|default(false) %}
    {% include 'web/partials/reading_progress.html.twig' %}
{% endif %}

{% include 'web/structure/_header.html.twig' %}

<main id="main-content" role="main">
    {% block pre_content %}{% endblock pre_content %}
    {% block content %}{% endblock content %}
    {% block post_content %}{% endblock post_content %}
</main>

{% include 'web/structure/_footer.html.twig' %}
</body>
</html>
