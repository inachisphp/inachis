{% endblock metadata %}

{% block sm_twitter %}
    <meta name="twitter:card" content="summary_large_image">
    {% if settings.twitter|default('') is not empty %}
        <meta name="twitter:site" content="{{ '@' ~ settings.twitter }}">
        <meta name="twitter:creator" content="{{ '@' ~ settings.twitter }}">
    {% endif %}
    <meta name="twitter:title" content="{% if item.title is not empty %}{{ item.title }} / {% endif %}{{ settings.siteTitle }}">
    <meta name="twitter:description" content="{{ item.description }}">
    {% if item.image is not empty %}
        <meta name="twitter:image" content="{% if not (item.image starts with 'http') %}/imgs/{% endif %}{{ item.image.filename }}">
        <meta name="twitter:image:alt" content="{{ item.image.altText }}">
    {% endif %}
{% endblock sm_twitter %}

{% block sm_open_graph %}
    <meta property="og:site_name" content="{{ settings.siteTitle }}">
    <meta property="og:url" content="{{ item.url }}">
    <meta property="og:type" content="{% if source is empty %}website{% else %}article{% endif %}">
    <meta property="og:title" content="{% if item.title is not empty %}{{ item.title }} / {% endif %}{{ settings.siteTitle }}">
    <meta property="og:description" content="{{ item.description }}">
    {% if item.image is not empty %}
        <meta property="og:image" content="{% if not (item.image starts with 'http') %}/imgs/{% endif %}{{ item.image.filename }}">
        <meta property="og:image:type" content="{{ item.image.filetype }}">
        <meta property="og:image:alt" content="{{ item.image.altText }}">
    {% endif %}
    {% if showAuthor|default(true) and item.author is not empty %}
        <meta property="og:article:author" content="{{ item.author.displayName }}">
    {% endif %}
    <meta property="og:article:published_time" content="{{ item.published_date|date('c') }}">
    {% if settings.fb_app_id|default('') is not empty %}
        <meta property="fb:app_id" content="{{ settings.fb_app_id }}">
    {% endif %}
{% endblock sm_open_graph %}

{% block additional_metadata %}{% endblock additional_metadata %}