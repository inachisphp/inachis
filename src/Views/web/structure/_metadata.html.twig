{% set source = post is defined ? post : series ?? '' %}
{% set item = {
    'title': source.subTitle is defined ?
    source.title ~ ' - ' ~ source.subTitle :
    source.title is defined ? source.title : '',
    'description': source.featureSnippet is defined ?
    source.featureSnippet :
    source.description is defined ? source.description : '',
    'image': source.featureImage is defined ?
    source.featureImage :
    source.image is defined ? source.image : '',
    'author': source.author is defined ? source.author : '',
    'published_date': source.postDate is defined ?
    source.postDate :
    source.lastDate is defined ? source.lastDate : '',
    'url': source.url.link is defined ?
    '/' ~ source.url.link :
    source.url is defined ?
    path('app_series_view', { 'year': source.firstDate|date('Y'), 'title': source.title|lower }) :
    app.request.uri,
} %}

{% block metadata %}
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta http-equiv="keywords" content="{{ page.keywords }}" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <meta http-equiv="Last-Update" content="{{ page.modDate }}" />
    <meta http-equiv="Content-Language" content="{{ settings.language }}" />
    <meta http-equiv="imagetoolbar" content="no" />
    <meta name="Author" content="David G. Paul" />
    <meta name="Copyright" content="&copy; David G. Paul" />
    <meta name="keywords" content="{{ page.keywords }}" />
    <meta name="description" content="{{ page.description }}" />
    <meta name="abstract" content="" />
    <meta name="category" content="home page" />
    <meta name="robots" content="index,follow" />
    <meta name="googlebot" content="NOODP" />
    <meta name="language" content="{{ settings.language }}" />
    <meta name="revised" content="{{ page.modDate }}" />
{% if settings.geo.lat|default('') is not empty and settings.geo.long|default('') is not empty %}
    <meta name="ICBM" content="{{ settings.geo.lat }}, {{ settings.geo.long }}" />
    <meta name="geo.position" content="{{ settings.geo.lat }}, {{ settings.geo.long }}" />
{% endif %}
{% if settings.geo.name|default('') is not empty %}
    <meta name="geo.placename" content="{{ settings.geo.name }}" />
{% endif %}
{% if settings.geo.region|default('') is not empty %}
    <meta name="geo.region" content="{{ settings.geo.region }}" />
{% endif %}
