{
    "name": "jedi58/inachis",
    "type": "library",
    "description": "A simple PHP library that provides simple site functions",
    "keywords": ["dev"],
    "license": "MIT",
    "authors": [
        {"name": "David G. Paul"}
    ],
    "require": {
        "php": ">=5.6.1",
        
        "doctrine/dbal": "2.5.*",
        "doctrine/orm": "2.5.*",
        "monolog/monolog": "1.*",
        "twig/twig": "1.*"
    },
    "require-dev": {
        "behat/behat": "2.*",
        "mockery/mockery": "*",
        "phpdocumentor/phpdocumentor": "*",
        "phpunit/phpunit": "4.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "suggest": {
        "symfony/console": "If you want to use the command line tools"
    },
    "autoload": {
        "psr-4": {
            "Inachis\\Component\\": "src/Inachis/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Inachis\\Tests\\": "tests/phpunit/Inachis/"
        }
    },
    "archive": {
        "exclude": [
            "tests", "phpunit.xml", ".travis.yml", "build.xml", "*coveralls.yml"
        ]
    }
}
