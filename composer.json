{
    "name": "jedi58/inachis",
    "type": "library",
    "description": "A basic framework for use in producing simple post/page driven websites",
    "keywords": ["dev"],
    "license": "MIT",
    "authors": [
        { "name": "David G. Paul" }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "michelf/php-markdown",
                "version": "1.0",
                "dist": {
                    "url": "https://github.com/michelf/php-markdown/zipball/extra",
                    "type": "zip"
                },
                "autoload": {
                    "files": [
                        "markdown.php"
                    ]
                }
            }
        },
        {
            "type": "vcs",
            "url": "http://github.com/geta6/Twig-Markdown"
        }
    ],
    "require": {
        "php": ">=5.5",
        
        "doctrine/dbal": "2.5.*",
        "doctrine/orm": "2.5.*",
        "geta6/twig-markdown": "@dev",
        "klein/klein": "^2.1",
        "michelf/php-markdown": "1.*",
        "monolog/monolog": "1.*",
        "twig/twig": "1.*"
    },
    "require-dev": {
        "behat/behat": "2.*",
        "mockery/mockery": "*",
        "phpdocumentor/phpdocumentor": "2.*",
        "phpunit/phpunit": "4.*"
    },
    "autoload": {
        "psr-4": {
            "Inachis\\Component\\": "src/Inachis/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            //"composer dump-autoload --optimize",
            //"sudo npm install",
            //"gulp"
        ],
        "post-update-cmd": [
            "npm update"
        ]
    },
    "archive": {
        "exclude": [ "tests" ]
    }
}
